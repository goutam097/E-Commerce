<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>

<body>
    <div class="container py-5">
        <div class="row">
            <form action="" method="post">
                <!-- Name input -->
                <div class="form-outline my-5 mb-4">
                    <input type="text" id="form4Example1" name="name" class="form-control" <%if(data && data.name) {%>
                    value="<%= data.name %>"
                        <% } %> />
                            <label class="form-label" for="form4Example1">Name</label>
                </div>

                <!-- Email input -->
                <div class="form-outline mb-4">
                    <input type="email" id="form4Example2" name="email" class="form-control" <%if(data && data.email)
                        {%>
                    value="<%= data.email %>"
                        <% } %> />
                            <label class="form-label" for="form4Example2">Email address</label>
                </div>

                <!-- Message input -->
                <div class="form-outline mb-4">
                    <input type="text" id="form4Example2" name="mobile" class="form-control" <%if(data && data.mobile)
                        {%>
                    value="<%= data.mobile %>"
                        <% } %> />
                            <label class="form-label" for="form4Example2">Mobile</label>
                </div>

                <div class="form-outline mb-4">
                    <input type="text" id="form4Example2" name="gender" class="form-control" <%if(data && data.gender)
                        {%>
                    value="<%= data.gender %>"
                        <% } %> />
                            <label class="form-label" for="form4Example2">Gender</label>
                </div>


                <button type="submit" href="/" class="btn btn-primary btn-block mb-4">Update</button>
            </form>
        </div>
    </div>
</body>

</html>
            <h3 class="text-left">Your Product</h3>
            <div class="product-comment row">
                <section class="product-details col-md-7">
                    <div class="card">
                        <div class="bg-image hover-overlay ripple" data-mdb-ripple-color="light">
                            <% if(data.image && data.image.data!=undefined){%>
                                <img src="data:image/<%=data.image.contentType%>;base64,<%=data.image.data.toString('base64')%>"
                                    class="img-fluid" />
                                <%} else {%>
                                    <img src="<%=data.img%>" class="img-fluid" />
                                    <%}%>
                                        <a href="#!">
                                            <div class="mask" style="background-color: rgba(251, 251, 251, 0.15);">
                                            </div>
                                        </a>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= data.name%>
                            </h5>
                            <h6 class="card-subtitle mb-2 text-muted">Price &#8377; <%=data.price%>
                            </h6>
                            <p class="card-text">
                                <%=data.desc%>
                            </p>
                            <div class="action-button d-flex flex-column align-items-center ">
                                <div class="allbuttons">
                                    <div class="addtocart mb-2">
                                        <% let addtoCart=`/admin/cart/${data._id}` %>
                                            <form action="<%=addtoCart%>" method="post"
                                                class="d-flex justify-content-evenly">
                                                <button type="submit" class="btn btn-success">Add to Cart</button>
                                                <div class="form-outline">
                                                    <input type="number" id="typeNumber" class="form-control " min=1
                                                        max=5 value="1" name="quantity" />
                                                    <label class="form-label" for="typeNumber">Quantity</label>
                                                </div>

                                            </form>
                                    </div>

                                </div>


                            </div>

                            <!-- <a href="/products/<%=data._id%>" class="btn btn-success"></a> -->
                        </div>
                    </div>



                    <div class="col-md-6 col-lg-4 col-xl-3 p-2">
                        <div class="special-img position-relative overflow-hidden">
                            <img src="/images/special_product_2.jpg" class="w-100">
